<h1><%= @list.name %></h1>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.movie.title %> - <%= bookmark.comment %> <img src="<%= bookmark.movie.poster_url %>" alt=<%= "bookmark.movie.title poster" %>>  <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<div><%= link_to "Add a movie to this list", new_list_bookmark_path(params[:id]) %></div>
